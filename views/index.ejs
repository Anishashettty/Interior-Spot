<%- include("partials/header") %>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Moso Interior</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/style/index.css"> <!-- Custom styles -->
</head>
<body>

    <!-- Hero Section -->
    <section class="hero-section text-center py-5">
        <div class="container">
            <p class="text-success fw-bold">Welcome to Moso Interior üè°</p>
            <h1 class="display-4 fw-bold text-white">Decorate a beautiful interior <br> for your space</h1>
            
            <!-- Search Box -->
            <div class="search-box bg-white p-4 rounded shadow mt-4">
                <form action="/search" method="GET" class="row g-3">
                    <div class="col-md-5">
                        <label class="form-label fw-bold">Product</label>
                        <select class="form-select">
                            <option>Bathroom, Living Room...</option>
                            <option>Kitchen</option>
                            <option>Bedroom</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label class="form-label fw-bold">Price</label>
                        <select class="form-select">
                            <option>$500 to $990</option>
                            <option>$1,000 - 2,900</option>
                            <option>$3,000 - 5,000</option>
                            <option>$5,000 - 10,000</option>
                            <option>$11,000 - 25,000</option>
                        </select>
                    </div>
                    <div class="col-md-3 d-flex align-items-end">
                        <button type="submit" class="btn btn-warning w-100">Search</button>
                    </div>
                </form>
            </div>
        </div>
    </section>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
